<h1>Listing tags</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Tag value</th>
    <th>Xpos</th>
    <th>Ypos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.photo_id %></td>
    <td><%= tag.tag_value %></td>
    <td><%= tag.xpos %></td>
    <td><%= tag.ypos %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

