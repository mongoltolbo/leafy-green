<script type="text/javascript">
$(function(){
  $("#friendsColumn").delegate('click','.scrollDown',function () {
    var animationOffset = $('#friendsColumn ul').css('top').replace('px','')*4;
    $('#friendsColumn ul').animate({ "top": animationOffset + "px" }, "fast");
  });
});
</script>
<%= form_tag('/messages/send', :class => 'chat_window') do %>
  <%= button_tag '', :remote => true, :type => "button", :class => "submitMessage" %>
  <%= text_area_tag 'msg_body', "", :id => "" %>
  <input type="text" name="" id="" placeholder="Enter Message ..." />
  <%= hidden_field_tag 'sender', "Test", :id => "", :class => "sender" %>
<% end %>