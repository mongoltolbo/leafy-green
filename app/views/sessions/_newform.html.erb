
  <%= form_tag('/auth/identity/callback', :id => 'login_form' , :remote => "true") do %>
	    <div class="field">
	      <%= label_tag :auth_key, "Email" %><br>
	      <%= text_field_tag :auth_key %>
	    </div>
	    <div class="field">
	      <%= label_tag :password %><br>
	      <%= password_field_tag :password %>
	    </div><br/>
	    <div class="actions"><%= submit_tag "Login" %></div><br/>
	  <% end %>