<section class="timeline">
  <%= form_tag timeline_url do %>
    <%= text_area_tag :message, nil, :placeholder => 'Message here.' %>
    <%= submit_tag 'Update Facebook Status', :disable_with => 'Updating...' %>
  <% end %>
  <br/>
 <b> Friends Statuses<br/></b>
  <% @posts.each do |post| %>
    <article class="clearfix">
      <div class="avatar">
        <fb:profile-pic uid="<%= post.from.identifier %>" size="square"></fb:profile-pic>
      </div>
      <p>
        <strong><fb:name uid="<%= post.from.identifier %>"></fb:name></strong>
        <%= post.message || post.name || post.caption || post.description %>
      </p>
    </article>
  <% end %>

</section>