<hr/>
<b>Add Comments</b>
  <br/>
    <%= form_for postcomment, :html => {:onsubmit => "postsCommentsSubmit(this);return false;"}   do |f| %>
  
 <%= f.hidden_field :post_id %>
  <%= f.hidden_field :identity_id %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content , :rows=>5%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
    
 