<section class="profile">
  <h2>Facebook Profile</h2><br/>
  <dl>
    <dt>Username</dt>
    <dd><%= current_identity.profile.username %></dd>
    <dt>Name</dt>
    <dd><%= current_identity.profile.name %></dd>
    <dt>First Name</dt>
    <dd><%= current_identity.profile.first_name %></dd>
    <dt>Middle Name</dt>
    <dd><%= current_identity.profile.middle_name %></dd>
    <dt>Last Name</dt>
    <dd><%= current_identity.profile.last_name %></dd>
    <dt>Gender</dt>
    <dd><%= current_identity.profile.gender %></dd>
    <dt>Link</dt>
    <dd><%= link_to current_identity.profile.link, current_identity.profile.link %></dd>
    <dt>Email</dt>
    <dd><%= current_identity.profile.email %></dd>
    <dt>About</dt>
    <dd><%= current_identity.profile.about %></dd>
    <dt>Birthday</dt>
    <dd><%= current_identity.profile.birthday %></dd>
    <dt>Work</dt>
    <% current_identity.profile.work.each do |work| %>
      <dd>
        <article>
          <header>
            <h3><%= work.employer.name %></h3>
            <p><%= work.start_date %> - <%= work.end_date || 'Current' %></p>
          </header>
          <p><%= work.position.try(:name) %></p>
        </article>
      </dd>
    <% end %>
    <dt>Education</dt>
    <% current_identity.profile.education.each do |education| %>
      <dd>
        <article>
          <h3><%= education.school.name %></h3>
          <p><%= education.type %></p>
        </article>
      </dd>
    <% end %>

    <dt>Hometown</dt>
    <dd><%= current_identity.profile.hometown.try(:name) %></dd>
    <dt>Location</dt>
    <dd><%= current_identity.profile.location.try(:name) %></dd>
    <dt>Bio</dt>
    <dd><%= current_identity.profile.bio %></dd>
    <dt>Quotes</dt>
    <dd><%= current_identity.profile.quotes %></dd>
    <dt>Interested in</dt>
    <dd><%= current_identity.profile.interested_in.join(', ') %></dd>
    <dt>Relationship Status</dt>
    <dd><%= current_identity.profile.relationship_status %></dd>
    <dt>Religion</dt>
    <dd><%= current_identity.profile.religion %></dd>
    <dt>Political</dt>
    <dd><%= current_identity.profile.political %></dd>
    <dt>Verified</dt>
    <dd><%= current_identity.profile.verified %></dd>
    <dt>Significant Other</dt>
    <dd><%= current_identity.profile.significant_other.try(:name) %></dd>
    <dt>Timezone</dt>
    <dd><%= current_identity.profile.timezone %></dd>
    <dt>Locale</dt>
    <dd><%= current_identity.profile.locale %></dd>
    <dt>Languages</dt>
    <dd><%= current_identity.profile.languages.collect(&:name).join(', ') %></dd>
    <dt>Sports</dt>
    <dd><%= current_identity.profile.sports.collect(&:name).join(', ') %></dd>
    <dt>Favorite Teams</dt>
    <dd><%= current_identity.profile.favorite_teams.collect(&:name).join(', ') %></dd>
    <dt>Inspirational People</dt>
    <dd><%= current_identity.profile.inspirational_people.collect(&:name).join(', ') %></dd>
    <dt>Update Time</dt>
    <dd><%= current_identity.profile.updated_time %></dd>
    <dt>Third Party ID</dt>
    <dd><%= current_identity.profile.third_party_id %></dd>
    <dt>Pending.. (temporary disabled by facebook)</dt>
    <% [:address, :mobile_phone].each do |attribute| %>
      <dd><%= attribute %></dd>
    <% end %>
  </dl>
</section>